{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "importHelpers": false,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}
